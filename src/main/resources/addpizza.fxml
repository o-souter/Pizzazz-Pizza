   <children>
      <AnchorPane prefHeight="480.0" prefWidth="640.0">
         <children>
            <ListView fx:id="listPizzas" layoutX="30.0" layoutY="25.0" onMouseClicked="#onItemClicked" prefHeight="430.0" prefWidth="225.0" />
